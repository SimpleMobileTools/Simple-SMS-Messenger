<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ReplyActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@color/color_primary"
        android:padding="@dimen/activity_margin"
        android:text="@string/unknown_sender"
        android:textSize="@dimen/extra_big_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:padding="@dimen/big_margin"
        android:text="@string/message_body"
        android:textSize="@dimen/big_text_size" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_background_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancel_reply"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:alpha="0.9"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="closePopUp"
            android:padding="@dimen/normal_margin"
            android:src="@drawable/ic_cross_vector"
            android:tint="@color/color_primary"
            android:visibility="visible" />

        <com.simplemobiletools.commons.views.MyEditText
            android:id="@+id/thread_type_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:focusedByDefault="true"
            android:hint="@string/type_a_message"
            android:minHeight="@dimen/normal_icon_size" />

        <ImageView
            android:id="@+id/thread_send_message"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:alpha="0.4"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="false"
            android:onClick="sendMessage"
            android:padding="@dimen/medium_margin"
            android:src="@drawable/ic_send_vector" />
    </LinearLayout>
</LinearLayout>

